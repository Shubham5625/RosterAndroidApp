<?xml version="1.0" encoding="utf-8" ?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/activity_main"
            android:layout_width="584dp"
            android:layout_height="1089dp"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context="com.example.shubham.theroster.MainActivity">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="The Roster"
                android:textColor="#77b300"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView"
                android:layout_marginTop="15dp"
                android:text="1. Enter your name:"
                android:textSize="24sp" />


            <EditText
                android:id="@+id/editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView6"
                android:layout_below="@+id/textView2"
                android:layout_marginTop="9dp"
                android:background="#C2FF65"
                android:ems="20"
                android:inputType="textPersonName"
                android:paddingLeft="0dp"
                android:text="Name" />

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView3"
                android:layout_alignTop="@+id/checkBox"
                android:layout_marginEnd="31dp"
                android:background="#C2FF65"
                android:checked="false"
                android:text="Steady" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/spinner"
                android:layout_marginTop="34dp"
                android:text="4. When is your Birthday(mm/dd/yyyy)?"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText"
                android:layout_marginTop="23dp"
                android:text="2. Thinks we are going Steady"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/checkBox2"
                android:layout_marginTop="19dp"
                android:text="3. Select your eye color:"
                android:textSize="24sp" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView3"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="24dp"
                android:layout_toStartOf="@+id/button"
                android:background="#C2FF65"
                android:checked="false"
                android:text="Not Steady" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView9"
                android:layout_below="@+id/radioGroup"
                android:layout_marginTop="19dp"
                android:text="6. Pant Size"
                android:textSize="24sp" />

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/textView6"
                android:layout_marginTop="41dp"
                android:orientation="horizontal">
                <!-- XS,S,M,L,XL,XXL -->
                <RadioButton
                    android:id="@+id/xs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="XS" />

                <RadioButton
                    android:id="@+id/s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="S" />

                <RadioButton
                    android:id="@+id/m"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="M" />

                <RadioButton
                    android:id="@+id/l"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="L" />

                <RadioButton
                    android:id="@+id/xl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="XL" />

                <RadioButton
                    android:id="@+id/xxl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="XXL" />
            </RadioGroup>

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView3"
                android:layout_below="@+id/textView4"
                android:layout_marginTop="16dp"
                android:background="#C2FF65"
                android:entries="@array/color_arrays"
                android:spinnerMode="dropdown" />

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@+id/spinner"
                android:layout_below="@+id/textView7"
                android:layout_marginTop="23dp"
                android:max="16" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/seekBar"
                android:layout_marginTop="26dp"
                android:text="7. Shirt Size"
                android:textSize="24sp" />

            <SeekBar
                android:id="@+id/seekBar2"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@+id/textView7"
                android:layout_below="@+id/textView8"
                android:layout_marginTop="17dp"
                android:max="12" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/seekBar"
                android:layout_below="@+id/seekBar2"
                android:layout_marginTop="42dp"
                android:text="8. Shoe Size"
                android:textSize="24sp" />

            <SeekBar
                android:id="@+id/seekBar3"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView9"
                android:layout_marginTop="16dp"
                android:max="8" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/seekBar3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:onClick="save"
                android:text="Submit" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/seekBar"
                android:layout_marginEnd="9dp"
                android:layout_marginTop="8dp"
                android:background="#C2FF65"
                android:text="" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView10"
                android:layout_below="@+id/seekBar2"
                android:layout_marginTop="9dp"
                android:background="#C2FF65"
                android:text="" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView11"
                android:layout_below="@+id/seekBar3"
                android:background="#C2FF65"
                android:text="" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView5"
                android:layout_marginTop="13dp"
                android:layout_toEndOf="@+id/textView4"
                android:onClick="onClickCalendar"
                android:text="Calendar" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/button2"
                android:layout_marginTop="19dp"
                android:text="5. Select a Shirt Size"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/TextEdit1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#C2FF65"
                android:clickable="false"
                android:ems="10"
                android:inputType="textPersonName"
                android:text=""
                android:layout_alignBaseline="@+id/button2"
                android:layout_alignBottom="@+id/button2"
                android:layout_alignEnd="@+id/textView6" />


        </RelativeLayout>
    </TableLayout>
</ScrollView>
